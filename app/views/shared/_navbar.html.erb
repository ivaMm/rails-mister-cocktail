 <div class="navbar bg-dark">
   <h2 class="brand"><%= link_to 'Cocktails', root_path %></h2>
   <div class="ml-auto flex">
     <%= form_tag(root_path, :method => "get", :controller => "cocktails", :class => "form-inline my-2 my-lg-0") do %>
       <input class="form-control mr-sm-2" name="query" type="search" placeholder="Search by name" aria-label="Search" value="<%= params[:query] %>">
       <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
     <% end %>
   </div>
   <%= link_to "Add cocktail", new_cocktail_path, class: "btn-pink" %>
</div>
