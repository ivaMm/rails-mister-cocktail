<div class="container">
  <div class="row justify-content-sm-center">
      <% @cocktails.each do |cocktail| %>
      <div class="card" style="width: 300px; margin: 32px 24px;">
        <%= cl_image_tag cocktail.photo.key, height: 200, width: 300, crop: :fill %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
          </div>
        </div>
      <% end %>
  </div>
</div>
