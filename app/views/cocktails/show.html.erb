<div class="container">
  <div class="row justify-content-sm-center">
    <div class="card-show" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
    </div>
    <div class="card-show">
      <div class="card-body">
        <h3 class="card-title"><%= @cocktail.name %></h3>
        <ul class="list">
          <% @cocktail.doses.each do |dose| %>
            <li> <%= dose.ingredient.name %> <%= dose.description %>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash destroy_dose"></i>
            <% end %>
            </li>
          <% end %>
        </ul>
        <p><%= link_to "Add dose",  new_cocktail_dose_path(@cocktail), class: "btn-green" %></p>
        <% if @cocktail.reviews.empty? %>
          <p>No reviews yet, write one ↙️ </p>
        <% else %>
         <h4>Average rating:  <%= "⭐" * @cocktail.avg_rating %></h4>
         <br>
         <%= link_to "All Reviews", cocktail_reviews_path(@cocktail), class: "btn-pink pages" %>
        <% end %>
        <%= link_to 'Add Review', new_cocktail_review_path(@cocktail), class: "btn-green" %>
      </div>
    </div>
  </div>
</div>
