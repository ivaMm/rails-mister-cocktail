<div class="container-form">
  <h3 class="brand"><%= link_to @cocktail.name, cocktail_path(@cocktail) %> </h3>
  <hr>
  <%= simple_form_for [@cocktail, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, input_html: { min: '1', max: '5' } %>
    <%= f.submit "Submit review", class: "btn-green" %>
  <% end %>
</div>
